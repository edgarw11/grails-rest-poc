{
    "swagger": "2.0",
    "info": {
        "version": "0.2.0",
        "title": "GRAILS REST API POC",
        "description": "A simpler POC with Grails to generate RESTful Web Services\n"
    },
    "host": "localhost:8080",
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json",
        "application/xml"
    ],
    "produces": [
        "application/json",
        "application/xml"
    ],
    "paths": {
        "/titles": {
            "get": {
                "summary": "Title",
                "description": "Gets `Title` objects.\n",
                "responses": {
                    "200": {
                        "description": "List all titles",
                        "schema": {
                            "title": "Titles",
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Title"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "Title": {
            "properties": {
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "year": {
                    "type": "integer"
                },
                "synopsis": {
                    "type": "string"
                }
            }
        }
    }
}